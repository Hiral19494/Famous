<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/your_cellphone_number"
        android:paddingTop="@dimen/padd_10"
        android:paddingLeft="@dimen/padd_10"/>

    <EditText
        android:id="@+id/edt_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/txv"
        android:layout_marginLeft="60dp"
        android:hint="@string/phone_number_hint"
        android:inputType="number"
        android:paddingTop="@dimen/padd_10"/>

    <EditText
        android:id="@+id/edt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_number"
        android:layout_centerHorizontal="true"
        android:hint="Message"
        android:paddingTop="30dp"
        android:paddingLeft="@dimen/padd_10"
        android:inputType="text"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_msg"
        android:paddingTop="@dimen/padd_10"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/padd_10">

        <Button
            android:id="@+id/btn_normal_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_send"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryLogin"/>
    </LinearLayout>

</RelativeLayout>